{
  "variables": {
    "major_version": "19",
    "minor_version": "10",
    "ubuntu_version": "{{user `major_version`}}.{{user `minor_version`}}",
    "mirror": "http://cdimage.ubuntu.com",
    "mirror_directory": "ubuntu/releases/{{user `ubuntu_version`}}/release",
    "iso_name": "ubuntu-{{user `ubuntu_version`}}-server-amd64.iso",
    "iso_checksum": "921fd8b271c04aa86a321cc35b40e677f9b85f7903bf2204efb2389b0f0a64c1",
    "iso_checksum_type": "sha256",
    "preseed_path": "ubuntu-{{user `major_version`}}/preseed.cfg",
    "name_template": "ubuntu-{{user `ubuntu_version`}}-amd64"
  },
  "builders": [{
    "type": "qemu",
    "cpus": 1,
    "memory": 1024,
    "disk_size": 65536,
    "vm_name": "{{user `name_template`}}",
    "output_directory": "builds/packer-{{user `name_template`}}",
    "iso_url": "{{user `mirror`}}/{{user `mirror_directory`}}/{{user `iso_name`}}",
    "iso_checksum": "{{user `iso_checksum`}}",
    "iso_checksum_type": "{{user `iso_checksum_type`}}",
    "http_directory": "http",
    "boot_wait": "10s",
    "boot_command": [
      "<esc><wait>",
      "<esc><wait>",
      "<enter><wait>",
      "/install/vmlinuz<wait>",
      " auto<wait>",
      " console-setup/ask_detect=false<wait>",
      " console-setup/layoutcode=us<wait>",
      " console-setup/modelcode=pc105<wait>",
      " debconf/frontend=noninteractive<wait>",
      " debian-installer=en_US.UTF-8<wait>",
      " fb=false<wait>",
      " initrd=/install/initrd.gz<wait>",
      " kbd-chooser/method=us<wait>",
      " keyboard-configuration/layout=USA<wait>",
      " keyboard-configuration/variant=USA<wait>",
      " locale=en_US.UTF-8<wait>",
      " netcfg/get_domain=vm<wait>",
      " netcfg/get_hostname=vagrant<wait>",
      " grub-installer/bootdev=/dev/vda<wait>",
      " noapic<wait>",
      " preseed/url=http://{{.HTTPIP}}:{{.HTTPPort}}/{{user `preseed_path`}}<wait>",
      " -- <wait>",
      "<enter><wait>"
    ],
    "shutdown_command": "echo 'vagrant' | sudo -S /sbin/shutdown -hP now",
    "communicator": "ssh",
    "ssh_port": 22,
    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "ssh_timeout": "10000s"
  }],
  "provisioners": [{
    "type": "shell",
    "environment_vars": [
      "HOME_DIR=/home/vagrant"
    ],
    "scripts": [
      "scripts/common/sudoers.sh",
      "scripts/common/vagrant.sh",
      "scripts/ubuntu/cleanup.sh"
    ],
    "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E sh '{{.Path}}'",
    "expect_disconnect": true
  }],
  "post-processors": [{
    "type": "vagrant",
    "keep_input_artifact": true,
    "output": "builds/{{user `name_template`}}-{{.Provider}}.box"
  }]
}
